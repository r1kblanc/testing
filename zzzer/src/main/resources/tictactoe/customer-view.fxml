<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tictactoe.CustomerController"
            prefWidth="420" prefHeight="240">
    <children>
        <Label layoutX="20" layoutY="20" text="Name:"/>
        <TextField fx:id="txtName" layoutX="120" layoutY="16" prefWidth="260"/>

        <Label layoutX="20" layoutY="60" text="Address:"/>
        <TextField fx:id="txtAddress" layoutX="120" layoutY="56" prefWidth="260"/>

        <Label layoutX="20" layoutY="100" text="Phone:"/>
        <TextField fx:id="txtPhone" layoutX="120" layoutY="96" prefWidth="260"/>

        <Label layoutX="20" layoutY="140" text="Email:"/>
        <TextField fx:id="txtEmail" layoutX="120" layoutY="136" prefWidth="260"/>

        <Button text="Add Customer" layoutX="120" layoutY="180" prefWidth="260"
                onAction="#addCustomer"/>

        <Separator layoutX="20" layoutY="214" prefWidth="360"/>

        <!-- DELETE CUSTOMER -->
        <Label text="Delete Customer" layoutX="30" layoutY="260" style="-fx-font-size: 18;" />
        <Label text="Customer #:" layoutX="30" layoutY="305"/>
        <TextField fx:id="tfDeleteCustNo" layoutX="140" layoutY="301" prefWidth="180"/>
        <Button text="Delete" layoutX="330" layoutY="300" onAction="#deleteCustomer"/>
    </children>
</AnchorPane>
