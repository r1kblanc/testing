<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoe.MainController">

    <top>
        <MenuBar prefHeight="20.0" prefWidth="900.0">
            <menus>
                <Menu text="Customer">
                    <items>
                        <MenuItem onAction="#showCustomerViewAdd" text="Add new customer" />
                        <MenuItem onAction="#showCustomerViewDelete" text="Delete customer" />
                    </items>
                </Menu>
                <Menu text="Reservation">
                    <items>
                        <MenuItem onAction="#showReservationAdd" text="Add reservation" />
                        <MenuItem onAction="#showReservationDelete" text="Delete reservation" />
                    </items>
                </Menu>
                <Menu text="Search">
                    <items>
                        <MenuItem onAction="#showSearchByName" text="By name" />
                        <MenuItem onAction="#showSearchDuration" text="Stay duration (by #)" />
                        <MenuItem onAction="#showSearchTotalCost" text="Total cost (by #)" />
                    </items>
                </Menu>
                <Menu text="Exit">
                    <items>
                        <MenuItem onAction="#exitApp" text="Quit" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- where sub-views load -->
    <center>
        <AnchorPane fx:id="contentRoot">
         <children>
            <ImageView fitHeight="147.0" fitWidth="118.0" layoutX="263.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/customer.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="154.0" fitWidth="270.0" layoutX="450.0" layoutY="104.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/Reservation.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="149.0" fitWidth="170.0" layoutX="375.0" layoutY="311.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/search.png" />
               </image>
            </ImageView>
            <Button layoutX="265.0" layoutY="105.0" mnemonicParsing="false" onAction="#showCustomerViewAdd" opacity="0.0" prefHeight="145.0" prefWidth="108.0" text="Add/Delete Customer" />
            <Button layoutX="451.0" layoutY="105.0" mnemonicParsing="false" onAction="#showReservationAdd" opacity="0.0" prefHeight="144.0" prefWidth="269.0" text=" Add/Delete Reservation" />
            <Button layoutX="374.0" layoutY="310.0" mnemonicParsing="false" onAction="#showSearchByName" opacity="0.0" prefHeight="150.0" prefWidth="152.0" text="Search" />
         </children></AnchorPane>
    </center>
</BorderPane>
