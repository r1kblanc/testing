<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tictactoe.MainController"
            prefWidth="900.0" prefHeight="600.0">

    <top>
        <MenuBar>
            <menus>
                <Menu text="Customer">
                    <items>
                        <MenuItem text="Add new customer"    onAction="#showCustomerViewAdd"/>
                        <MenuItem text="Delete customer"      onAction="#showCustomerViewDelete"/>
                    </items>
                </Menu>
                <Menu text="Reservation">
                    <items>
                        <MenuItem text="Add reservation"      onAction="#showReservationAdd"/>
                        <MenuItem text="Delete reservation"    onAction="#showReservationDelete"/>
                    </items>
                </Menu>
                <Menu text="Search">
                    <items>
                        <MenuItem text="By name"              onAction="#showSearchByName"/>
                        <MenuItem text="Stay duration (by #)" onAction="#showSearchDuration"/>
                        <MenuItem text="Total cost (by #)"    onAction="#showSearchTotalCost"/>
                    </items>
                </Menu>
                <Menu text="Exit">
                    <items>
                        <MenuItem text="Quit"                 onAction="#exitApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <!-- where sub-views load -->
    <center>
        <AnchorPane fx:id="contentRoot"/>
    </center>
</BorderPane>
