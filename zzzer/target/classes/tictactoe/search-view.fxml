<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tictactoe.SearchController"
            prefWidth="820" prefHeight="520">

    <children>
        <!-- Title -->
        <Label text="Search" layoutX="30" layoutY="20" style="-fx-font-size: 18;" />

        <!-- BY NAME -->
        <Label text="By name:" layoutX="30" layoutY="70"/>
        <TextField fx:id="tfSearchName"
                   layoutX="120" layoutY="66" prefWidth="240"
                   promptText="Enter part of a name"
                   onAction="#searchByName"/>
        <Button text="Search" layoutX="370" layoutY="65" onAction="#searchByName"/>

        <!-- DURATION BY CUSTOMER # -->
        <Label text="Stay duration by customer #:" layoutX="30" layoutY="110"/>
        <TextField fx:id="tfSearchDurationId"
                   layoutX="240" layoutY="106" prefWidth="120"
                   promptText="e.g. 1"
                   onAction="#searchDuration"/>
        <Button text="Search" layoutX="370" layoutY="105" onAction="#searchDuration"/>

        <!-- TOTAL COST BY CUSTOMER # -->
        <Label text="Total cost by customer #:" layoutX="30" layoutY="150"/>
        <TextField fx:id="tfSearchCostId"
                   layoutX="240" layoutY="146" prefWidth="120"
                   promptText="e.g. 1"
                   onAction="#searchTotalCost"/>
        <Button text="Search" layoutX="370" layoutY="145" onAction="#searchTotalCost"/>

        <Separator layoutX="30" layoutY="190" prefWidth="760"/>

        <!-- RESULTS TABLE -->
        <TableView fx:id="tblResult"
                   layoutX="30" layoutY="210"
                   prefWidth="760" prefHeight="280"
                   AnchorPane.leftAnchor="30.0"
                   AnchorPane.rightAnchor="30.0"
                   AnchorPane.bottomAnchor="30.0">
            <columns>
                <TableColumn fx:id="colResult" text="Result" prefWidth="740"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
