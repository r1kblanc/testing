<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520" prefWidth="820" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tictactoe.SearchController">

    <children>
        <!-- Title -->
        <Label layoutX="381.0" layoutY="21.0" text="Search">
         <font>
            <Font name="Century" size="18.0" />
         </font></Label>

        <!-- BY NAME -->
        <Label layoutX="242.0" layoutY="72.0" text="By name:" />
        <TextField fx:id="tfSearchName" layoutX="319.0" layoutY="68.0" onAction="#searchByName" prefWidth="240" promptText="Enter part of a name" />
        <Button layoutX="587.0" layoutY="66.0" onAction="#searchByName" text="Search">
         <font>
            <Font name="Century" size="14.0" />
         </font></Button>

        <!-- DURATION BY CUSTOMER # -->
        <Label layoutX="190.0" layoutY="112.0" text="Stay duration by customer #:" />
        <TextField fx:id="tfSearchDurationId" layoutX="439.0" layoutY="108.0" onAction="#searchDuration" prefWidth="120" promptText="e.g. 1" />
        <Button layoutX="587.0" layoutY="106.0" onAction="#searchDuration" text="Search">
         <font>
            <Font name="Century" size="14.0" />
         </font></Button>

        <!-- TOTAL COST BY CUSTOMER # -->
        <Label layoutX="200.0" layoutY="152.0" text="Total cost by customer #:" />
        <TextField fx:id="tfSearchCostId" layoutX="439.0" layoutY="146.0" onAction="#searchTotalCost" prefWidth="120" promptText="e.g. 1" />
        <Button layoutX="587.0" layoutY="146.0" onAction="#searchTotalCost" text="Search">
         <font>
            <Font name="Century" size="14.0" />
         </font></Button>

        <Separator layoutX="30" layoutY="190" prefWidth="760" />

        <!-- RESULTS TABLE -->
        <TableView fx:id="tblResult" layoutX="30" layoutY="210" prefHeight="280" prefWidth="760" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            <columns>
                <TableColumn fx:id="colResult" prefWidth="740" text="Result" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
